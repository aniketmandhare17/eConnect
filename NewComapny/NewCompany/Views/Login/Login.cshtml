
@{
    ViewBag.Title = "LoginView";
}



<!DOCTYPE html>
<html lang="en">
<head>

    <script type="text/javascript">

        function BtnClick() {

            var user = $("#user").val();
            var pass = $("#pass").val();

            if (user == "" || pass == "") {
                document.getElementById('lblmsg').innerHTML
                    = 'Please Fill All Details';
                return false;

            }


            var obj = {
                UserName: user,
                Password: pass
            }
            SubmitForm(obj);
        }


        function SubmitForm(obj) {

            $.ajax(
                {
                    url: "/Login/Loginview",
                    method: "POST",
                    data: obj,
                    success: function (data) {
                  
                        if (data == true)
                            window.location.href = '/Home/Index';

                        else
                            document.getElementById('lblmsg').innerHTML
                                = 'Aunthentication invalid';


                    },
                    error: function (err) {
                        console.error(err);
                    }
                })
        }
    </script>




    <style>
        .formclass {
            height: 500px;
        }

        .inputsection {
            width: 100%;
            border: solid 1px black;
            border-radius: 10px;
            padding: 20px;
            font-size: 20px;
            margin: 40px;
        }

        .lbclass {
            margin-left: 80px;
            font-size: 50px;
        }

        h1 {
            margin-left: 20%;
            margin-top: 2%;
            font-family: sans-serif;
            font-size: 50px;
        }

        .btn {
            cursor: pointer;
            margin-left: 100%;
            padding-left: 35px;
            padding-right: 35px;
            padding-top: 15px;
            padding-bottom: 15px;
            font-size: 30px;
            border-radius: 20px;
            border: solid 1px black;
        }

        table {
            width: 85%;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h1>My Profile</h1>
    <br /><br />
    <table>

        <tr>
            <td><label class="lbclass" for="name"> UserName:- </label></td>
            <td><input class="inputsection" type="text" name="user" id="user"><br /></td>
        </tr>
        <tr>
            <td><label class="lbclass" for="contact"> Password:-</label></td>
            <td><input class="inputsection" type="password" name="pass" id="pass"><br /></td>
        </tr>
        <tr>
            <td> <button class="btn" value="Login" onclick="BtnClick()">Login</button></td>

        </tr>
        <tr>
            <td><label id="lblmsg"></label></td>

        </tr>
    </table>


</body>



</html>
