<body>

    <h1>Employee Profile</h1>
    <br /><br />
    <table>

        <tr>
            <td><label class="lbclass" for="name"> Employee First Name:- </label></td>
            <td><input class="inputsection" type="text" name="Fname" id="Fname"><br /></td>
        </tr>
        <tr>
            <td><label class="lbclass" for="contact"> Employee Last Nmae:-</label></td>
            <td><input class="inputsection" type="text" name="Lname" id="Lname"><br /></td>
        </tr>

        <tr>
            <td><label class="lbclass" for="contact"> Employee Position:-</label></td>
            <td><input class="inputsection" type="text" name="pos" id="pos"><br /></td>
        </tr>

        <tr>
            <td> <button class="btn" value="Submit" onclick="BtnClick()">Submit</button></td>

        </tr>
        <tr>
            <td><label id="lblmsg"></label></td>

        </tr>
    </table>


